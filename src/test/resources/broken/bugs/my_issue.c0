#include <stdio.h>

#define ptr *(uint32_t *) (0x28ff4402);

void f(int ptr)
{
	*ptr = 20;
	printf("The address of p inside f() is    %p\n", &ptr);
}

void g(int r)
{
	printf("The address of r inside g() is    %p\n", &r);
	f(r);
}

int main()
{
	int a = 55;

	printf("The address of a inside main() is %p\n", &a);
	f(a);
	g(a);

	return 0;
}