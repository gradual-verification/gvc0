#use <conio>
#use <stress>
// List underlying the stack
struct Node {
  int value;
  bool isTop;
  struct Node* next;
};
typedef struct Node Node;

// Stack
struct Stack {
  int size;
  Node* top;
};
typedef struct Stack Stack;

